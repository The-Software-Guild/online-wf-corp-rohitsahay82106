@model GuildCars.UI.Models.VehicleModelViewModel
@{
    ViewBag.Title = "Models";
}

<div class="container">
    <br />
    <h2>Models</h2>
    <div class="container" style="border:solid">
        @using (Html.BeginForm("Models", "Admin", FormMethod.Post))
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-inline">
            <label class="col-sm-2 justify-content-end"><strong>New Model</strong></label>
            @Html.TextBoxFor(m => m.newModel.VehicleModelDesc, new { @class = "form-control col-sm-3" })

            <label class="col-sm-1  justify-content-end"><strong>Make</strong></label>
            @Html.DropDownListFor(m => m.newModel.VehicleMakeID, Model.Make, new { @class = "form-control col-sm-3" })
            <div class="form-inline col-sm-2">
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
        }
        <br />
    </div>

    <br />

    <div class="container">
        <div class="row">
            <table class="table-bordered table-striped" style="border:3px solid black" cellpadding="10">
                <tr style="background-color:lightgray">
                    <th>Make</th>
                    <th>Model</th>
                    <th>Date Added</th>
                    <th>User</th>
                </tr>
                @foreach (var m in Model.vehicleModels)
                {
                    <tr>
                        <td>@m.Make</td>
                        <td>@m.Model</td>
                        <td>@m.DateAdded</td>
                        <td>@m.Email</td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>
